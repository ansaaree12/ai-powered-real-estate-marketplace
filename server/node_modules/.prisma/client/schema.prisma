// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id               String      @id @default(auto()) @map("_id") @db.ObjectId
  name             String?
  email            String      @unique
  image            String?
  bookedVisits     Json[]
  favResidenciesID String[]    @db.ObjectId
  ownedResidencies Residency[] @relation("Owner")
}

model Residency {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  description   String
  price         Int
  address       String
  city          String
  country       String
  image         String
  size          String? // Added size field as optional
  facilities    Json
  userEmail     String
  owner         User     @relation("Owner", fields: [userEmail], references: [email])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  TypeofHouse   String? // Added if you want to store this
  amenities     String? // Add this line
  gallery       String[] @default([]) // This is the new field for gallery images
  ranking_score Int      @default(1)
  brochureUrl   String?

  @@unique(fields: [address, userEmail])
}

model Agent {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String   @unique
  phone          String
  profilePicture String
  experience     Int
  specialties    String
  description    String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
